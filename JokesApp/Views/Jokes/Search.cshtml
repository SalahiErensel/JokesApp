<h4>Search for a Joke</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchResults"> 
            <div class="form-group">
                <h4>Enter a keyword included in joke</h4>
                <label for="search" class="control-label"></label>
                <input name="search" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary mt-3" />
                <a asp-action="Index" class="btn btn-danger mt-3">Back to List</a>
            </div>
        </form>
    </div>
</div>
